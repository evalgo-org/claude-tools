{
  "$schema": "https://claude.ai/schemas/project-v1.json",
  "version": "1.0",
  "database": {
    "type": "timescaledb",
    "host": "localhost",
    "port": 5433,
    "name": "claude_metrics",
    "location": "/home/opunix/claude-memory/",
    "query_helper": "/home/opunix/claude-memory/query-project.sh"
  },
  "project": {
    "id": "claude-tools",
    "name": "Claude Tools",
    "type": "go",
    "description": "Cross-platform CLI tools for development, built in Go for consistent behavior across Windows, Linux, and macOS",
    "version": "0.2.0",
    "language": "go",
    "repository": "https://github.com/evalgo-org/claude-tools",
    "license": "MIT"
  },
  "paths": {
    "root": "/home/opunix/claude-tools",
    "entry_points": ["cmd/claude-tools/main.go"]
  },
  "dependencies": {
    "runtime": {
      "eve.evalgo.org": "v0.0.13",
      "github.com/spf13/cobra": "v1.10.1"
    }
  },
  "commands": {
    "build": "go build -o claude-tools cmd/claude-tools/main.go",
    "test": "go test -v ./...",
    "test-race": "go test -race ./...",
    "test-coverage": "go test -coverprofile=coverage.out ./... && go tool cover -html=coverage.out",
    "lint": "golangci-lint run",
    "lint-fix": "golangci-lint run --fix",
    "install": "go install github.com/evalgo-org/claude-tools/cmd/claude-tools@latest",
    "build-all": "GOOS=linux GOARCH=amd64 go build -o claude-tools-linux-amd64 cmd/claude-tools/main.go && GOOS=darwin GOARCH=amd64 go build -o claude-tools-darwin-amd64 cmd/claude-tools/main.go && GOOS=windows GOARCH=amd64 go build -o claude-tools-windows-amd64.exe cmd/claude-tools/main.go"
  },
  "tools": [
    {
      "name": "grep",
      "type": "text-processing",
      "status": "available",
      "version": "0.1.0",
      "file": "pkg/grep/grep.go",
      "description": "Pattern searching in files with regex support"
    },
    {
      "name": "find",
      "type": "file-search",
      "status": "available",
      "version": "0.1.0",
      "file": "pkg/find/find.go",
      "description": "Find files by name, type, or criteria"
    },
    {
      "name": "cat",
      "type": "file-display",
      "status": "available",
      "version": "0.1.0",
      "file": "pkg/cat/cat.go",
      "description": "Concatenate and display file contents"
    },
    {
      "name": "head",
      "type": "file-display",
      "status": "available",
      "version": "0.2.0",
      "file": "pkg/head/head.go",
      "description": "Display first lines/bytes of files"
    },
    {
      "name": "tail",
      "type": "file-display",
      "status": "available",
      "version": "0.2.0",
      "file": "pkg/tail/tail.go",
      "description": "Display last lines/bytes of files with circular buffer"
    },
    {
      "name": "wc",
      "type": "text-processing",
      "status": "available",
      "version": "0.2.0",
      "file": "pkg/wc/wc.go",
      "description": "Count lines, words, bytes, characters, max line length"
    },
    {
      "name": "ls",
      "type": "file-search",
      "status": "available",
      "version": "0.2.0",
      "file": "pkg/ls/ls.go",
      "description": "List directory contents with formatting and sorting"
    },
    {
      "name": "sort",
      "type": "text-processing",
      "status": "available",
      "version": "0.2.0",
      "file": "pkg/sort/sort.go",
      "description": "Sort lines with numeric, field, and case-insensitive modes"
    },
    {
      "name": "uniq",
      "type": "text-processing",
      "status": "available",
      "version": "0.2.0",
      "file": "pkg/uniq/uniq.go",
      "description": "Filter duplicate lines with counting and filtering"
    }
  ],
  "ci": {
    "provider": "github-actions",
    "config": ".github/workflows/tests.yml",
    "golangci_lint_action": "v8",
    "go_version": "1.25.x"
  },
  "note": "All metadata stored in TimescaleDB. Query with: /home/opunix/claude-memory/query-project.sh"
}
